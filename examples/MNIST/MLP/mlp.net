// A MLP for MNIST with 3 hidden layers
// 784->1024->1024->1024->10
// Check N1.dot and get a pdf of the net with: 
// dot -T pdf N1.dot > N1.pdf

//CONSTANTS
const{
  threads=4
  batch=100
  log="mnist.log"
}

// DATA FILES
// Remember to download from links
data {
  D1 [filename="training", binary]
  D2 [filename="test", binary]
}

//NETWORK
network N1 {  
  //data
  data tr D1  //mandatory
  data ts D2 //optional

  // Fully Connected Input 
  FI in 
  
  // Fully connected
  F  f1 [numnodes=1024]
  F  f2 [numnodes=1024]
  F  f3 [numnodes=1024]
  
  // Fully Connected Output
  FO  out [classification]	

  // Connections
  in->f1
  f1->f2
  f2->f3
  f3->out
}

//RUN SCRIPT 
script {
  
  D1[:,S].div(255)
  D2[:,S].div(255)

  N1.noiser=1.0
  N1.noisesd=0.3
  
  N1.mu=0.1
  N1.bn=1

  N1.train(100)

}

