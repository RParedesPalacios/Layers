const {
threads=4
batch=100
}

data {
  D1 [filename="train64x64.bin", binary]
  D2 [filename="test64x64.bin", binary]
}


network N1 { 
  data tr D1 
  data ts D2

  CI in [nz=3, nr=64, nc=64,cr=48,cc=48]

  C c1 [nk=16, kr=3, kc=3,rpad=1,cpad=1]
  MP p1 [sizer=2,sizec=2]
  C nin1 [nk=16, kr=1, kc=1]	  	 

  C c2 [nk=32, kr=3, kc=3]		
  MP p2 [sizer=2,sizec=2]
  C nin2 [nk=32, kr=1, kc=1]	  	 

  C c3 [nk=64, kr=3, kc=3]		
  MP p3 [sizer=2,sizec=2]
  C nin3 [nk=64, kr=1, kc=1]	  	 

  // FC reshape
  F  f40 []	
  F  f41 [numnodes=1024]
  FO f43 [classification]

  in->c1
  c1->p1
  p1->nin1

  nin1->c2
  c2->p2
  p2->nin2

  nin2->c3
  c3->p3
  p3->nin3

  nin3->f40
  f40->f41
  f41->f43

}


script {
  
  D1[:,S].zscore()
  D2.getstats(D1)
  D2[:,S].zscore()

  N1.in.flip=1
  N1.l2=0.001
  N1.bn=1
  
  N1.f41.drop=0.5

  N1.mu=0.01
  N1.train(25)
  
  N1.mu=0.001	
  N1.train(25)

  N1.mu=0.0001	
  N1.train(25)
}

