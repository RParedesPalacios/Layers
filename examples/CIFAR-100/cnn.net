// CIFAR Convolutional

const {
threads=4
batch=100
}
data {
  //D1 [filename="minitrain", binary]
  D1 [filename="training", binary]
  D2 [filename="test", binary]
}


network N1 { 
  data tr D1 
  data ts D2

  CI in [nz=3, nr=32, nc=32]

  C c0 [nk=16, kr=3, kc=3]	  
  MP p0[sizer=2,sizec=2]
  C c1 [nk=32, kr=3, kc=3]	  	 
  MP p1 [sizer=2,sizec=2]
  C c2 [nk=64, kr=3, kc=3]		
  MP p2 [sizer=2,sizec=2]
  
  F   f0 []	

  F  f1 [numnodes=128]

  FO f2 [classification]

  // Connections
  in->c0
  c0->p0 
  p0->c1
  c1->p1
  p1->c2
  c2->p2
  //reshape
  p2->f0
  f0->f1
  f1->f2

}


script {
  
  D1[:,S].zscore()
  D2.getstats(D1)
  D2[:,S].zscore()


  N1.mu=0.01

  N1.in.noiser=0.5
  N1.in.noisesd=1.0

  N1.train(100)
}

